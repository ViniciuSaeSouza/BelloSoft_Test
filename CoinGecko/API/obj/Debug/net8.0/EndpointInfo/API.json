{
  "openapi": "3.0.1",
  "info": {
    "title": "CoinGecko API",
    "description": "An API for retrieving and storing cryptocurrency data from CoinGecko",
    "contact": {
      "name": "Vin√≠cius Saes",
      "email": "viniciusaesouza@gmail.com"
    },
    "version": "v1"
  },
  "paths": {
    "/api/Crypto/coins": {
      "get": {
        "tags": [
          "Crypto"
        ],
        "summary": "Retrieves a paginated list of available cryptocurrencies from CoinGecko",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number (default: 1)",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 1
            }
          },
          {
            "name": "pageSize",
            "in": "query",
            "description": "Number of items per page (default: 50)",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 50
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the list of coins"
          },
          "400": {
            "description": "If the request parameters are invalid",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "If no coins were found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "502": {
            "description": "If there was an error communicating with CoinGecko API"
          }
        }
      }
    },
    "/api/Crypto/currencies": {
      "get": {
        "tags": [
          "Crypto"
        ],
        "summary": "Retrieves a paginated list of supported currencies from CoinGecko",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number (default: 1)",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 1
            }
          },
          {
            "name": "pageSize",
            "in": "query",
            "description": "Number of items per page (default: 20)",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 20
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the list of currencies"
          },
          "400": {
            "description": "If the request parameters are invalid",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "If no currencies were found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "502": {
            "description": "If there was an error communicating with CoinGecko API"
          }
        }
      }
    },
    "/api/Crypto/prices": {
      "get": {
        "tags": [
          "Crypto"
        ],
        "summary": "Retrieves current price information for a specific cryptocurrency and currency",
        "parameters": [
          {
            "name": "cryptoId",
            "in": "query",
            "description": "The ID of the cryptocurrency (default: bitcoin)",
            "schema": {
              "type": "string",
              "default": "bitcoin"
            }
          },
          {
            "name": "currency",
            "in": "query",
            "description": "The currency to display the price in (default: usd)",
            "schema": {
              "type": "string",
              "default": "usd"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the cryptocurrency information"
          },
          "400": {
            "description": "If the request parameters are invalid",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "If the cryptocurrency was not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/Crypto/prices/history": {
      "get": {
        "tags": [
          "Crypto"
        ],
        "summary": "Retrieves historical price statistics for a specific cryptocurrency and currency",
        "parameters": [
          {
            "name": "cryptoId",
            "in": "query",
            "description": "The ID of the cryptocurrency (default: bitcoin)",
            "schema": {
              "type": "string",
              "default": "bitcoin"
            }
          },
          {
            "name": "currency",
            "in": "query",
            "description": "The currency to display the prices in (default: usd)",
            "schema": {
              "type": "string",
              "default": "usd"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the historical statistics"
          },
          "400": {
            "description": "If the request parameters are invalid",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "If no historical data was found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "If there was an error processing the request"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      }
    }
  }
}